

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/relative_layout_from_currency"
                android:layout_weight="1"
                android:clickable="true"
                android:background="@drawable/abc_spinner_ab_holo_light"
                >

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="46dp"
                    android:id="@+id/image_view_flag_from"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/lithuania"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginBottom="2dp"
                    android:layout_alignParentTop="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/currency"
                    android:id="@+id/text_view_currency_name_from"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_below="@+id/text_view_currency_code_from"
                    android:layout_alignLeft="@+id/text_view_currency_code_from"
                    android:layout_alignStart="@+id/text_view_currency_code_from"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/currency_code"
                    android:id="@+id/text_view_currency_code_from"
                    android:layout_toEndOf="@+id/image_view_flag_from"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/image_view_flag_from"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/relative_layout_to_currency"
                android:layout_weight="1"
                android:clickable="true"
                android:background="@drawable/abc_spinner_ab_holo_light">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="46dp"
                    android:id="@+id/image_view_flag_to"
                    android:src="@drawable/european_union"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="false"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_alignParentTop="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/currency"
                    android:id="@+id/text_view_currency_name_to"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_toStartOf="@+id/image_view_flag_to"
                    android:layout_toLeftOf="@+id/image_view_flag_to"
                    android:layout_below="@+id/text_view_currency_code_to"
                    android:gravity="right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/currency_code"
                    android:id="@+id/text_view_currency_code_to"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:singleLine="false"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/text_view_currency_name_to"
                    />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            >

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/edit_text_quantity_from"
                android:layout_gravity="center_vertical"
                android:text="3.4528"
                android:layout_weight="1"
                android:gravity="center"
                android:imeOptions="actionDone"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_view_swap_currencies"
                android:src="@drawable/ic_action_swap"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/edit_text_quantity_to"
                android:text="1.0"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:gravity="center"
                android:imeOptions="actionDone"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/courses_checked"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/text_view_exhange_date"
                android:id="@+id/text_view_last_check_date"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left"/>

        </LinearLayout>

    </LinearLayout>